{
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "typescript",
        "typescriptreact",
        "json",
        "javascriptreact",
        "typescript.tsx"
    ],
    "eslint.filetypes": [
        "javascript",
        "typescript",
        "typescriptreact",
        "javascriptreact",
        "typescript.tsx"
    ],
    "javascript.format.enabled": true,
    "languageserver": {
        "bash": {
            "args": [
                "start"
            ],
            "command": "bash-language-server",
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "dockerfile": {
            "args": [
                "--stdio"
            ],
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ]
        },
        "golang": {
            "args": [
                "-logfile=/tmp/gopls_vim.log"
            ],
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod",
                ".git/",
                ".hg/"
            ]
        }
    },
    "tsserver.enable": true
}
